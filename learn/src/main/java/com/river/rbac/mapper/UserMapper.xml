<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.river.rbac.mapper.UserMapper">

	<!-- 按条件查询 -->
	<select id="get" resultType="com.river.rbac.bean.UserBean">
		SELECT * FROM t_user WHERE 1=1
		<if test="id != null || id !=''">AND id=#{id}</if>
		<if test="name != null || name !=''">AND name=#{name}</if>
	</select>
	<!-- 插入数据 -->
	<insert id="post" parameterType="com.river.rbac.bean.UserBean">
		INSERT INTO r_user (id,name,password)
		VALUES (#{id},#{name},#{password})
	</insert>
</mapper>