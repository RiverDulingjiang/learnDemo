<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="1 seconds">
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <logger name="org.springframework.web" level="INFO"/>

    <!-- 测试环境 -->
     <springProfile name="test,dev">
     	<!-- 设置日志上下文名称，可以通过%contextName来打印日志上下文名称 -->
     	<contextName>logback</contextName>
     	<!-- <property file="src/main/resources/logback.properties" /> -->
    	<property name="log.path" value="D:\\web\\logback.log" />
    	
    	<!-- 日志控制台回滚策略 -->
   		<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        	<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            	<level>ERROR</level>
        	</filter>
        	<encoder>
           		<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
           		<charset>UTF-8</charset> <!-- 此处设置字符集 -->
        	</encoder>
    	</appender>
    	
    	<!-- 日志文件回滚策略 -->
    	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        	<file>${log.path}</file>
        	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        		<!-- 每天一归档 -->
            	<fileNamePattern>${log.path}.%d{yyyy-MM-dd}.zip</fileNamePattern>
            	<!-- 单个日志文件最多 100MB, 10天的日志周期，最大不能超过2GB -->   
			   	<maxHistory>10</maxHistory>
			   	<totalSizeCap>2GB</totalSizeCap>
        	</rollingPolicy>
        	<encoder>
            	<pattern>%date %level [%thread] %logger{36} [%file : %line] %msg%n</pattern>
            	<charset>UTF-8</charset> <!-- 此处设置字符集 -->
       		</encoder>
    	</appender>

    	<root level="debug">
        	<appender-ref ref="console" />
        	<appender-ref ref="file" />
    	</root>
    	
    	<!-- logger节点，可选节点，用来具体指明包的日志输出级别，它将会覆盖root的输出级别 -->
        <logger name="org.springframework" level="WARN"/>
    </springProfile>


    <!-- 生产环境 -->
    <springProfile name="prod">
        <logger name="org.springframework.web" level="ERROR"/>
        <logger name="org.liting" level="ERROR" />
    </springProfile>

</configuration>